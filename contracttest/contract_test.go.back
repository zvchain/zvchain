	txpool.AddTransaction(genContractTx(1, core.GasLimitMax, source, contractAddr.GetHexString(), r, 44, []byte(abi), nil, 0, types.TransactionTypeContractCall))

	if !doAddBlockOnChain() {
		return
	}
